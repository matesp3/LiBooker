@inherits LayoutComponentBase
@inject NavigationManager Navigation
@using LiBookerWasmApp.Services.Auth
@inject CustomAuthStateProvider AuthProvider

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <!-- Added ID or explicit classes for layout control -->
        <div class="top-row px-4">
            
            <!-- 1. Search Section Wrapper -->
            <div class="layout-search-wrapper">
                <GlobalSearch />
            </div>
            
            <!-- 2. Auth & Links Section Wrapper -->
            <div class="layout-auth-wrapper d-flex align-items-center gap-3">
                <AuthorizeView>
                    <Authorized>
                        <a href="person/details" class="user-welcome-chip me-2">
                            <!-- Avatar part -->
                            <div class="welcome-avatar">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                                </svg>
                            </div>
                            
                            <!-- Two-line text: Greeting + Name -->
                            <div class="welcome-text">
                                <span class="welcome-label">Good day,</span>
                                <span class="user-name">@(context.User.Identity?.Name)</span>
                            </div>
                        </a>

                        <button class="btn btn-link btn-sm text-secondary text-decoration-none" @onclick="LogoutAsync">Log out</button>
                    </Authorized>
                    <NotAuthorized>
                        <a href="login" class="me-2 text-nowrap">Log in</a>
                        <a href="register" class="btn btn text-nowrap">Registration</a>
                    </NotAuthorized>
                </AuthorizeView>
                
                <NavLink href="contact" class="text-nowrap text-muted small text-decoration-none">
                    Contact
                </NavLink>
            </div>

        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task LogoutAsync()
    {
        await AuthProvider.LogoutAsync();
        Navigation.NavigateTo("/login?loggedOut=true");
    }
}
