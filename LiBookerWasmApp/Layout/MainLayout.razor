@inherits LayoutComponentBase
@inject NavigationManager Navigation
@using LiBookerWasmApp.Services.Auth
@inject CustomAuthStateProvider AuthProvider

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <!-- Centered search bar area -->
            <div class="search-area">
                <GlobalSearch />
            </div>
            
            <!-- Auth & Links area -->
            <div class="d-flex align-items-center gap-3">
                <AuthorizeView>
                    <Authorized>
                        <span class="me-2">Welcome, @(context.User.Identity?.Name)!</span>
                        <button class="btn btn-link btn-sm" @onclick="Logout">Log out</button>
                    </Authorized>
                    <NotAuthorized>
                        <a href="login" class="me-2">Log in</a>
                        <a href="register" class="btn btn-primary btn-sm">Registration</a>
                    </NotAuthorized>
                </AuthorizeView>
                
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout()
    {
        await AuthProvider.LogoutAsync();
        Navigation.NavigateTo("/");
    }
}
