@inherits LayoutComponentBase
@inject NavigationManager Navigation
@using LiBookerWasmApp.Services.Auth
@inject CustomAuthStateProvider AuthProvider

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <!-- Added ID or explicit classes for layout control -->
        <div class="top-row px-4">
            
            <!-- 1. Search Section Wrapper -->
            <div class="layout-search-wrapper">
                <GlobalSearch />
            </div>
            
            <!-- 2. Auth & Links Section Wrapper -->
            <div class="layout-auth-wrapper d-flex align-items-center gap-3">
                <AuthorizeView>
                    <Authorized>
                        <span class="me-2 text-truncate" style="max-width: 150px;">Welcome, @(context.User.Identity?.Name)!</span>
                        <button class="btn btn-link btn-sm" @onclick="Logout">Log out</button>
                    </Authorized>
                    <NotAuthorized>
                        <a href="login" class="me-2 text-nowrap">Log in</a>
                        <a href="register" class="btn btn text-nowrap">Registration</a>
                    </NotAuthorized>
                </AuthorizeView>
                
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-nowrap">About</a>
            </div>

        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout()
    {
        await AuthProvider.LogoutAsync();
        Navigation.NavigateTo("/");
    }
}
